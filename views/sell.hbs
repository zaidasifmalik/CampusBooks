{{#if sess}}
<script>
    let log = document.getElementById('log-btn');
    log.innerHTML = "Logout";
    let s = `images/{{sess.image}}`
    document.getElementById('prof').src = s;
</script>
{{else}}
<script>
    let log = document.getElementById('log-btn');
    log.innerHTML = "Login";
</script>
{{/if}}

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
<form method="post" action="/addbook" enctype="multipart/form-data" novalidate>
  <div class="row">
    <div class="col-7">
      <h1>Upload Book</h1>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Book Name</label>
    <input type="text" class="form-control" id="inputAddress" name="bname" placeholder="e-g Fundamentals of Physics">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Edition</label>
      <input type="number" class="form-control" id="inputEmail4" name="bEd" placeholder="e-g 3rd">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Author</label>
      <input type="text" class="form-control" id="inputPassword4" name="bAuth" placeholder="e-g Tahir Ejaz">
    </div>
  </div>

  <div class="form-group">
    <label for="exampleFormControlSelect1">Subject</label>
    <select class="form-control" id="bsubjectinput" name="bSub">
      <option>Select</option>
      <option>Computing</option>
      <option>Mathematics</option>
      <option>Engineering</option>
      <option>Business</option>
      <option>Science</option>
      <option>Languages</option>
      <option>Social Sciences</option>
      <option>Humanities</option>
    </select>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Semester</label>
      <select class="form-control" id="bsemesterinput" name="bSem">
        <option>Select</option>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Condition</label>
      <select class="form-control" id="bconditioninput" name="bCond">
        <option>Select</option>
        <option>New</option>
        <option>Used</option>
      </select>
    </div>
  </div>
  <div><label for="inputPassword4">Price</label></div>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Pkr</span>
    </div>
    <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="bPrice">
    <div class="input-group-append">
      <span class="input-group-text">.00</span>
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="bdescriptioninput" rows="3" name="bDesc"></textarea>
  </div>
  <div><label for="exampleFormControlTextarea1">Upload Image</label></div>
  <div class="input-group mb-3">
    <input type="file" class="form-control" id="uploadimgfile" name="profileimg"
      accept="image/jpeg, image/jpg, image/png"> 
    {{!-- <label class="input-group-text" for="inputGroupFile02"><i type="file" class="bi bi-upload"></i></label> --}}
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Prove That You Are Not Saifullah
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit Book</button>
</form>